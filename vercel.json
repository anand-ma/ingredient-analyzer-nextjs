{
  "version": 2,
  "builds": [
    {
      "src": "next.config.mjs",
      "use": "@vercel/next"
    },
    {
      "src": "app/api/pdf-gen/route.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/pdf-gen/(.*)",
      "dest": "/app/api/pdf-gen/route.py"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}